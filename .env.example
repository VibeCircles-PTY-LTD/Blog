# Copy this file to .env.local and fill in your values.
# Find these at https://manage.sanity.io -> your project -> Settings -> API

# Next.js (public, exposed to browser)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Server-side only (never expose to browser)
# Used by draft/preview mode when enabled
SANITY_API_READ_TOKEN=your_read_token_here
# Required for admin API routes (x-admin-secret)
ADMIN_API_SECRET=your_admin_secret_here
# Required to write to Sanity via admin API routes
SANITY_WRITE_TOKEN=your_write_token_here

# Sanity Studio (used inside sanity.config.js)
SANITY_STUDIO_PROJECT_ID=your_project_id_here
SANITY_STUDIO_DATASET=production
